{
	"version": "1.0.0",

	"attributes": {
		"CoreName": {
			"label": "Core Name",
			"type": "string",
			"validation": "^[A-Za-z0-9]+$",
			"tooltip": "Current core name"
		},
		"bootOs": {
			"label": "Boot OS",
			"type": "bool",
			"tooltip": "Will current core boot the operating system?"
		},
		"isCosmos": {
			"label": "Is CosmOS core",
			"type": "bool",
			"tooltip": "Runs current core the CosmOS operating system?"
		},
		"memory": {
			"inherit": "memories/:name",
			"label": "Unmapped data memory",
			"tooltip": "Unmapped data stored in specific memory section, this section is available before the MPU is active"
		},
		"unmapped_size": {
			"label": "Unmapped data section size",
			"type": "int",
			"min": 0,
			"max": 2048,
			"tooltip": "Size of the unmapped data section"
		}
	},

	"elements": {
		"core_0":
		[
			{
				"target": "CoreName",
				"value": "CM7"
			},
			{
				"target": "bootOs",
				"value": false
			},
			{
				"target": "isCosmos",
				"value": true
			},
			{
				"target": "memory",
				"targetNameOverwrite": "unmapped_memory",
				"value": "DTCM"
			},
			{
				"target": "unmapped_size",
				"value": 2048
			}
		],
		"core_1":
		[
			{
				"target": "CoreName",
				"value": "CM4"
			},
			{
				"target": "bootOs",
				"value": true
			},
			{
				"target": "isCosmos",
				"value": true
			},
			{
				"target": "memory",
				"targetNameOverwrite": "unmapped_memory",
				"value": "SRAM1"
			},
			{
				"target": "unmapped_size",
				"value": 2048
			}
		]
	}
}
